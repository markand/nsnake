#
# Change owner/group of the executable and the database directory.
#

if (NOT EXISTS "@NSNAKE_SCORESDIR@")
    message(STATUS "Creating game database directory: @NSNAKE_SCORESDIR@")
    file(MAKE_DIRECTORY "@NSNAKE_SCORESDIR@")
endif ()

if (NOT WIN32)
    execute_process(
        COMMAND chown @WITH_USER@:@WITH_GROUP@ "${CMAKE_INSTALL_PREFIX}/bin/nsnake"
        COMMAND chmod 2555 "${CMAKE_INSTALL_PREFIX}/bin/nsnake"
        COMMAND chown @WITH_USER@:@WITH_GROUP@ "@NSNAKE_SCORESDIR@"
        COMMAND chmod 2775 "@NSNAKE_SCORESDIR@"
    )
endif ()
